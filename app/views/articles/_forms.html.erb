<div class="container">

<%= render 'shared/errors', obj: @article %>

<%= form_with(model: @article, class:"card shadow pt-4 pr-4 mb-5 bg-secondary rounded", local: true) do |f| %>
    <div class="form-group row">
        <%= f.label :Title, class: "col-2 col-form-label" %> 
        <div class="col-10">
        <%= f.text_field :title, class: "form-control shadow rounded" %>
        </div>
    </div>  

    <div class="form-group row">
        <%= f.label :description, class: "col-2 col-form-label" %> 
        <div class="col-10">
        <%= f.text_area :description, rows: 5, class: "form-control shadow rounded" %>
        </div>
    </div>  

<div class="form-group row justify-content-center">
    <%= f.submit class: "btn btn-primary" %>
</div>


<% end %>

    <div class="row justify-content-center">
        <%= link_to 'Return to all articles', articles_path, class: "btn btn-primary" %>
    </div>
</div>