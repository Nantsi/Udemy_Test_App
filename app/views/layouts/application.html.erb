  </head>

  <body>
    <%= render 'layouts/navbar' %>
    
    <div id="page-content">
      <%= render 'layouts/messages' %>
      <%= yield %>
   
    
    <footer id="sticky-footer" class="py-4 bg-dark text-white mt-auto">
      <div class="container text-center">
        <small>
        <%= link_to 'To all articles', articles_path %> |
        <%= link_to 'About', about_path %>
        </small>
      </div>
    </footer>
     </div>
  </body>
