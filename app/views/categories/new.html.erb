<div id="page-content" class="d-flex flex-column min-vh-100">


<h1 class="text-center pt-2">New Category</h1>

<div class="container">

<%= render 'shared/errors', obj: @category %>

<%= form_with(model: @category, class:"card shadow pt-4 pr-4 mb-5 bg-secondary rounded", local: true) do |f| %>
    <div class="form-group row">
        <%= f.label :name, class: "col-2 col-form-label" %> 
        <div class="col-10">
        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Category"  %>
        </div>
    </div>  

<div class="form-group row justify-content-center">
    <%= f.submit class: "btn btn-primary" %>
</div>


<% end %>

    <div class="row justify-content-center">
        <%= link_to 'Return to all articles', articles_path, class: "btn btn-primary" %>
    </div>
</div>

</div>