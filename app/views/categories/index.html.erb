<div id="page-content" class="d-flex flex-column min-vh-100">


  <h1 class="text-center pt-2">Categories </h1>
  
  <div class="container">
    <% @categories.each do |category| %>
      <div class="row justify-content-md-center">
        <div class="col-5 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-body">
              <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success" %></h5>
            </div>
            <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
            
            <% if current_user.admin? %>
              <div>
              <%= link_to "Edit", edit_category_path(category), class: "btn btn-info mb-2" %>
              </div>
            <% end %>
            
            <div class="card-footer text-muted">
              <small>Created <%= time_ago_in_words(category.created_at) %> ago, 
              edited <%= time_ago_in_words(category.updated_at) %> ago</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div> 

  <div class="apple_pagination">
    <div class="page_info">
      <%= page_entries_info @categories %>
    </div>
    <%= will_paginate @categories, :container => false %>
  </div>
  
</div>