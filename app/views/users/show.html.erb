<div id="page-content" class="d-flex flex-column min-vh-100">


<h1 class="text-center pt-2"><%= @user.username %> Profile </h1>

    <%= gravatar_for @user, size: 200 %>
    
<div class="text-center mt-4">
    <% if logged_in? and @user == current_user || current_user.admin? %>
        <%= link_to "Edit profile", edit_user_path(@user), class: "btn btn-info" %>
        <%= link_to "Delete profile", user_path(current_user), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?" } %> 

    <% end %>
</div>

<h3 class="text-center mt-4">Articles</h3>

    <%= render 'articles/article' %>

<div class="apple_pagination">
    <div class="page_info">
      <%= page_entries_info @articles %>
    </div>
    <%= will_paginate @articles, :container => false %>
  </div>

</div>